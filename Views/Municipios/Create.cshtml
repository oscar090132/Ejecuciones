@model Ejecuciones.Models.Municipio

@{
    ViewData["Title"] = "Municipios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Municipios</h1>

<h3>Nuevo Municipio</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodigoMunicipio" class="control-label"></label>
                <input asp-for="CodigoMunicipio" class="form-control" />
                <span asp-validation-for="CodigoMunicipio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreMunicipio" class="control-label"></label>
                <input asp-for="NombreMunicipio" class="form-control" />
                <span asp-validation-for="NombreMunicipio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartamentoId" class="control-label"></label>
                <select asp-for="DepartamentoId" class ="form-control" asp-items="ViewBag.DepartamentoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
