@model IEnumerable<Ejecuciones.Models.Funcionario>

@{
    ViewData["Title"] = "Funcionarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Funcionarios</h1>

<p>
    <a asp-action="Create">Nuevo Funcionario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CargoEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Despacho)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CargoEmpleado.NombreCargo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Despacho.NombreDespacho)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FuncionarioId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.FuncionarioId">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.FuncionarioId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
