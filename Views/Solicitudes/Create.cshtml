@model Ejecuciones.Models.Solicitud

@{
    ViewData["Title"] = "Solicitudes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registrar</h1>

<h3>Solicitudes</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DespachoId" class="control-label"></label>
                <select asp-for="DespachoId" class="form-control" asp-items="ViewBag.DespachoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TipoSolicitudId" class="control-label"></label>
                <select asp-for="TipoSolicitudId" class="form-control" asp-items="ViewBag.TipoSolicitudId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaSolicitud" class="control-label"></label>
                <input asp-for="FechaSolicitud" class="form-control" />
                <span asp-validation-for="FechaSolicitud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CedulaCondenado" class="control-label"></label>
                <input asp-for="CedulaCondenado" class="form-control" />
                <span asp-validation-for="CedulaCondenado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombresCondenado" class="control-label"></label>
                <input asp-for="NombresCondenado" class="form-control" />
                <span asp-validation-for="NombresCondenado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidosCondenado" class="control-label"></label>
                <input asp-for="ApellidosCondenado" class="form-control" />
                <span asp-validation-for="ApellidosCondenado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnexosSolicitud" class="control-label"></label>
                <input asp-for="AnexosSolicitud" class="form-control" />
                <span asp-validation-for="AnexosSolicitud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CuadernosSolicitud" class="control-label"></label>
                <input asp-for="CuadernosSolicitud" class="form-control" />
                <span asp-validation-for="CuadernosSolicitud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoliosSolicitud" class="control-label"></label>
                <input asp-for="FoliosSolicitud" class="form-control" />
                <span asp-validation-for="FoliosSolicitud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoSolicitudId" class="control-label"></label>
                <select asp-for="EstadoSolicitudId" class="form-control" asp-items="ViewBag.EstadoSolicitudId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
